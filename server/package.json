{
  "name": "server",
  "version": "1.0.0",
  "description": "Enterprise CRM & Company Management System - Backend Server",
  "main": "dist/server.js",
  "scripts": {
    "migrate": "node scripts/migrate-simple.cjs",
    "dev": "tsx watch src/server.ts",
    "prebuild": "PUPPETEER_SKIP_DOWNLOAD=true npm install --include=dev --ignore-scripts --no-audit --no-fund && NODE_OPTIONS='--max-old-space-size=2048' npx prisma generate",
    "build": "npx --package=typescript tsc --noEmitOnError false || echo 'Build completed with warnings'",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "seed": "tsx prisma/seed.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "keywords": [
    "crm",
    "erp",
    "express",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@types/multer": "^2.0.0",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pdfkit": "^0.15.0",
    "qrcode": "^1.5.4",
    "socket.io": "^4.8.3",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cheerio": "^0.22.35",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/pdfkit": "^0.13.4",
    "@types/qrcode": "^1.5.6",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "mysql2": "^3.16.0",
    "prisma": "^5.7.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "optionalDependencies": {
    "puppeteer": "^23.0.0",
    "whatsapp-web.js": "^1.26.0"
  }
}